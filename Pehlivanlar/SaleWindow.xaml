<Window x:Class="Pehlivanlar.SaleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pehlivanlar"
        mc:Ignorable="d"
        Title="Satış" Height="310" Width="400">
    <StackPanel>
        <Label Content="Kategori" Height="25" FontFamily="Calibri"/>
        <ComboBox x:Name="cbCategories" Margin="5">

            <ComboBoxItem Content="Televizyon" ></ComboBoxItem>
            <ComboBoxItem Content="Buzdolabı" ></ComboBoxItem>
            <ComboBoxItem Content="Çamaşır Makinesi"></ComboBoxItem>
            <ComboBoxItem Content="Bulaşık Makinesi" ></ComboBoxItem>

        </ComboBox>
        <Button Content="Seç" x:Name="btnSelect" Margin="30,5,30,5"/>
        <ComboBox Margin=" 5">
            <ComboBoxItem></ComboBoxItem>
            <ComboBoxItem></ComboBoxItem>
        </ComboBox>
       


    </StackPanel>
</Window>
